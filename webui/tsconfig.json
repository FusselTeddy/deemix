{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": ".",
		"allowJs": true,
		"checkJs": false,
		"outDir": "./dist",
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
